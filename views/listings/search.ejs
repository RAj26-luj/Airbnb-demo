<% layout("layouts/boilerplate") %>

<div class="container-fluid px-4 mt-3">
  <h2 class="search-results-title mb-4">
    Search results for "<%= query %>"
  </h2>

  <% if (listings.length === 0) { %>
    <div class="text-center mt-5">
      <i class="fa-solid fa-magnifying-glass fa-3x text-muted mb-3"></i>
      <p class="text-muted">No properties found matching your search.</p>
      <a href="/listings" class="btn btn-outline-dark mt-2">View all listings</a>
    </div>
  <% } %>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3">
    <% listings.forEach(listing => { %>
      <div class="col mb-4">
        <a class="listing-link" href="/listings/<%= listing._id %>">
          <div class="card listing-card h-100">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <span class="fw-bold"><%= listing.title %></span><br>
                <span class="text-muted"><%= listing.city %>, <%= listing.country %></span><br>
                <small class="badge rounded-pill bg-light text-dark border mt-1"><%= listing.category %></small><br>
                
                <span class="d-block mt-2">
                  <span class="fw-bold"><%= listing.price.toLocaleString("en-IN") %> â‚¹</span> / night
                </span>
                <small class="text-muted" style="font-size: 0.8rem;">(excluding taxes)</small>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</div>